    "auth": null,
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "// Enable session cookies",
                    "postman.setNextRequest('Send with session');"
                ]
            }
        },
        {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "// For Passport session, no need to handle tokens",
                    "pm.test(\"Status code is 200\", function() {",
                    "    pm.response.to.have.status(200);",
                    "});",
                    "",
                    "// Save IDs for later requests (if response contains them)",
                    "if (pm.response.code === 200) {",
                    "    const jsonData = pm.response.json();",
                    "    if (jsonData._id) {",
                    "        pm.environment.set(\"user_id\", jsonData._id);",
                    "    }",
                    "    if (jsonData.project && jsonData.project._id) {",
                    "        pm.environment.set(\"project_id\", jsonData.project._id);",
                    "    }",
                    "}"
                ]
            }
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:5000/api",
            "description": "Update with your server URL"
        },
        {
            "key": "user_id",
            "value": "",
            "description": "Auto-set after registration/login"
        },
        {
            "key": "project_id",
            "value": "",
            "description": "Auto-set after project creation"
        }
    ]
}